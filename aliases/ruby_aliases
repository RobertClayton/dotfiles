alias brs="./bin/rails server"
alias becop-branch-files="git diff --name-only main | xargs bundle exec rubocop"
alias becop-branch-files-ruby="git diff --name-only main | xargs ls -1 2>/dev/null | grep '\.rb$' | xargs bundle exec rubocop"
alias becop-uncommitted-files="git ls-files -m | xargs ls -1 2>/dev/null | grep '\.rb$' | xargs bundle exec rubocop"
alias ber-branch-specs="git diff --name-only main | grep _spec | xargs -n1 bundle exec rspec"
alias ber-uncommitted-specs-all="bundle exec rspec $(git status -s spec/ + git status -s */*/spec/  | cut -c4- | paste -sd ' ' -)"
alias installmysql2="gem install mysql2 --source 'https://rubygems.org/' -- --with-ldflags=-L/usr/local/opt/openssl/lib --with-cppflags=-I/usr/local/opt/openssl/include"
alias rbenv-doctor="curl -fsSL https://github.com/rbenv/rbenv-installer/raw/master/bin/rbenv-doctor | bash"
alias rc="rails console"
alias rdbm="rake db:migrate"
alias rs="rails server"
