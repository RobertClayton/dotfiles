alias branch-files="git diff --name-only main"
alias branch-files-ruby="git diff --name-only main | xargs ls -1 2>/dev/null | grep '\.rb$'"
alias branch-specs="git diff --name-only main | grep _spec"
alias ga="git add"
alias gap="git add -p"
alias gcm="git commit -m"
alias gco="git checkout"
alias gl="git log"
alias glo="git log --oneline"
alias glog="git log --oneline --decorate --graph"
alias gpf="git push --force-with-lease"
alias gpl="git pull"
alias gps="git push"
alias gs="git status"
alias uncommitted-files="git ls-files -m"
alias uncommitted-specs="git status -s spec/ | cut -c4- | paste -sd ' ' -"
alias uncommitted-specs-all="git status -s spec/ + git status -s */*/spec/  | cut -c4- | paste -sd ' ' -"
alias uncommitted-specs-gem="git status -s */*/spec/  | cut -c4- | paste -sd ' ' -"
